{% extends 'baseBack.html.twig' %}
{% block title %} Charges List {% endblock %}
{% block body %}

        <!-- PAGE CONTAINER-->

                                <!-- START WHITE BACKGROUND-->

                                    <!-- USER DATA-->
                                    <div class="user-data m-b-40">
                                        <h3 class="title-3 m-b-30">
                                            <i class="fa-solid fa-file-invoice"></i>Gestion Des Charges</h3>
                                        <div class="filters m-b-45">
                                            <div class="rs-select2--dark rs-select2--md m-r-10 rs-select2--border">
                                                <select class="js-select2" name="property">
                                                    <option selected="selected">Filtrer</option>
                                                    <option value="">Date arrivage</option>
                                                    <option value="">Id charge</option>
                                                </select>
                                                <div class="dropDownSelect2"></div>
                                            </div>
                                            <br>
                                            <br>
                                            <br>
                                            <br>
                                            
                                           <div class="input-group">
                                               {#//recherche #}
                                             <div class="container-fluid" style="display:flex;justify-content:flex-end;align-items:flex-end;">
                                                     <div class="header-wrap">
                                                          <form class="form-header" action="" method="POST">
                                                            <input class="au-input au-input--xl" type="text" name="search" placeholder="Chercher charge">
                                                             <button class="au-btn--submit" type="submit">
                                                         <i class="zmdi zmdi-search"></i>
                                                             </button>
                                                </form>
                                                </div>
                                                         </div>
                                                    
                                                 </div>

                                            <div class="table-responsive table-data">
                                            <table class="table">
                                                <thead>
                                                <tr>
                                                    <td>Id</td>
                                                    <td>Quantite Charge</td>
                                                    <td>Date Arrivage</td>
                                                    <td>Fournisseur Charge</td>
                                                    <td>Type Charge</td>
                                                    <td>actions</td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for charge in charges %}
                                                    <tr>
                                                        <td>{{ charge.id }}</td>
                                                        <td>{{ charge.quantiteCharge }}</td>
                                                        <td>{{ charge.dateArrivageCharge ? charge.dateArrivageCharge|date('Y-m-d') : '' }}</td>
                                                        <td>{{ charge.fournisseur }}</td>
                                                        <td>{{ charge.materiel }}</td>
                                                        <td>
                                                            <a class="btn btn-secondary" href="{{ path('app_charge_show', {'id': charge.id}) }}">show</a>
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-secondary" href="{{ path('app_charge_edit', {'id': charge.id}) }}">edit</a>
                                                        </td>

                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="4">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                        <div align="center" class="card-footer">

                                            <a type="reset" class="btn btn-danger btn-sm" href="{{ path('app_charge_new') }}">Create new</a>

                                        </div>
                                    </div>

                                    <!-- END USER DATA-->









{% endblock %}
