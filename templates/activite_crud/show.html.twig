{% extends 'baseBack.html.twig' %}

{% block title %}EnergyBox | Activité | {{ activite.nomActivite }} {% endblock %}

{% block body %}

    <div align="center">
    {% set img = activite.imageActivite %}
        <img src="{{ asset(img) }}" style="height: 350px;" alt="Erreur Import.">
    </div>
    <br>
    <table class="table">
        <tbody>
            <tr>
                <td><strong>Nom</strong></td>
                <td>{{ activite.nomActivite }}</td>
            </tr>
            <tr>
                <td><strong>Durée</strong></td>
                <td>{{ activite.dureeActivite }}</td>
            </tr>
            <tr>
                <td><strong>Tenue Recommandé</strong></td>
                <td>{{ activite.tenueActivite }}</td>
            </tr>
            <tr>
                <td><strong>Difficulté</strong></td>
                <td>{{ activite.difficulteActivite }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <strong>Plus de Detail :</strong>
    <br>
    <p>{{ activite.descriptionActivite }}</p>
    <br>
    <div align="center" class="card-footer">
        <button class="btn btn-outline-secondary"><a href="{{ path('app_activite_crud_edit', {'id': activite.id}) }}">Modifier</a></button>
            {{ include('activite_crud/_delete_form.html.twig') }}
        <button class="btn btn-outline-secondary"><a href="{{ path('app_activite_crud_index') }}">Retour à la Liste</a></button>
    </div>
                                
{% endblock %}
