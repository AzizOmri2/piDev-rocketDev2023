{% extends 'baseFront.html.twig' %}

{% block title %}EnergyBox | Restaurant {% endblock %}

{% block tache %}
    <style>
        .agrandir {
            width: 50px;
            height: 100px;
            transition: height 3s ease 200ms, width 3s ease 200ms;
        }
        .agrandir:hover {
            width: 50px;
            height: 200px;
        }
    </style>
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Bienvenue chez EnergyBox Restaurant</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="services-area pt-100 pb-150">
        <section class="wantToWork-area w-padding">
            <div class="container">
                <div class="row align-items-end justify-content-between">
                    <div class="col-lg-6 col-md-10 col-sm-10">
                        <div class="section-tittle">
                            <span>Nos plats</span>

                            <div class="col-auto">
                                {# <a href="{{ path('app_tri_prix') }}"  class="btn btn-outline-dark"><i class=""></i>TRIER PAR PRIX</a>#}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <div class="container">
            <div class="row">
               {# Teb3 el recherchee
                <input type="text" id="search" class="form-control" placeholder="Search">
                <div id="tabv">
                 Teb3 el recherchee #}

                {% for i in tabplat %}
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="single-cat single-cat2 text-center mb-50">
                            <div class="cat-icon">
                                <i class="flaticon-fitness"></i>
                            </div>
                            <a href="{{ path('app_qr_codes', {'id': i.id}) }}" class="btn btn-outline-dark"><i class="fas fa-square fa-xs"></i>QrCode</a>
                            <div class="cat-cap">
                                <p><strong style="color: #b00707">Nom du plat:</strong>{{i.nom }}</p>
                                <p><strong style="color: #b00707">Prix du plat:</strong>{{ i.prix }}DT</p>
                                <p><strong style="color: #b00707">Description du plat:</strong>{{i.description }}</p>
                                <p><strong style="color: #b00707" >Calories du plat:</strong>{{ i.calories }}Kcal</p>
                                {% if i.nbp > 0 %}

                                {% set variable = (i.etat == 1) %}

                                <p><strong style="color: #b00707">Etat du plat:</strong> Disponible</p>

                                {% else %}
                                    <p><strong style="color: #b00707">Etat du plat:</strong> Non Disponible</p>
                                {% endif %}
                                <p><strong style="color: #b00707" >Nombre du plat:</strong>{{ i.nbp }}</p>
                                {% set img = i.image %}
                                <td><img src="{{asset(img)}}" alt="#" class="agrandir" style="width:90%;"></td>
                                <br>
                                <br>
                                <br>
                                <br>
                                <div class="col-auto">
                                    <a href="{{ path('app_reservation_new',{'id':i.id}) }}" class="btn btn-outline-dark"><i class="fas fa-plus"></i>Réserver</a>
                                    <a href="{{ path('PDF_Plat',{'id':i.id}) }}" class="btn btn-outline-dark"><i class="fas fa-print"></i>Imprimer</a>
                                </div>
                                <br>
                                <br>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        </div>
    </section>
