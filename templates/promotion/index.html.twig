                <td>{{ promotion.DateExpiration ? promotion.DateExpiration|date('Y-m-d H:i:s') : '' }}</td>
                <td>
  <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}">
                <button class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Modifier">
