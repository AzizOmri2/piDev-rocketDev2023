{% extends 'baseBack.html.twig' %}

{% block title %}EnergyBox | Réclamation {% endblock %}

{% block body %}
<div class="map-data m-b-40">                   
    <h3 class="title-3 m-b-30">
        <i class="fas fa-newspaper"></i>Gestion Réclamations</h3>

    <table class="table">
        <thead>
            <tr>
                <td><strong>Nom</strong></td>
                <td><strong>Email</strong></td>
                <td><strong>Objet</strong></td>
                <td><strong>Texte</strong></td>
                <td><strong>Date</strong></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.nomUserReclamation|upper }}</td>
                <td>{{ reclamation.emailUserReclamation|striptags|slice(0, 13) }}</td>
                <td>{{ reclamation.objetReclamation|striptags|slice(0, 10) }}</td>
                <td>{{ reclamation.texteReclamation|striptags|slice(0, 10) }}</td>
                <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                <td>
                    <button class="btn btn-outline-secondary"><a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">Afficher</a></button>
                    {{ include('reclamation/_delete_form.html.twig') }}
                    <button class="btn btn-outline-secondary"><a href="{{ path('app_reponse_new', {'id': reclamation.id}) }}">Répondre</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de réclamations.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div align="center" class="card-footer">
         <br>
        <button class="btn btn-outline-secondary"><a href="{{ path('app_category_reclamation_index') }}">Consulter Catégorie</a></button>
        <button class="btn btn-outline-secondary"><a href="{{ path('app_category_reclamation_new') }}">Ajouter Catégorie</a></button>
    </div>
</div>
{% endblock %}
