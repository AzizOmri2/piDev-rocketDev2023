{% extends 'baseBack.html.twig' %}

{% block title %}EnergyBox | Réclamation {% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <td><strong>Réclamation de Mr</strong></td>
                <td>{{ reponse.reclamation.nomUserReclamation}}</td>
            </tr>
            <tr>
                <td><strong>Objet</strong></td>
                <td>{{ reponse.objetReponse }}</td>
            </tr>
            <tr>
                <td><strong>Date</strong></td>
                <td>{{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <td><strong>Piéce Jointe</strong></td>
                <td>{{ reponse.pieceJointe }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <strong>Contenu de Réponse :</strong>
    <br>
    <p>{{ reponse.contenuReponse }}</p>
    <br>
    <div align="center" class="card-footer">
        <button class="btn btn-outline-secondary"><a href="{{ path('app_reponse_index') }}">Retour à la liste</a></button>
        {{ include('reponse/_delete_form.html.twig') }}
        <button class="btn btn-outline-secondary"><a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">Modifier</a></button>
    </div>

{% endblock %}
