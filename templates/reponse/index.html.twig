{% extends 'baseBack.html.twig' %}

{% block title %}EnergyBox | Réponse {% endblock %}

{% block body %}
<div class="map-data m-b-40">                   
    <h3 class="title-3 m-b-30">
        <i class="fas fa-newspaper"></i>Gestion Réponses</h3>

    <table class="table">
        <thead>
            <tr>
                <td><strong>Réc de MR</strong></td>
                <td><strong>Objet</strong></td>
                <td><strong>Date</strong></td>
                <td><strong>Contenu</strong></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.reclamation.nomUserReclamation|upper}}</td>
                <td>{{ reponse.objetReponse|striptags|slice(0, 15) }}</td>
                <td>{{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d') : '' }}</td>
                <td>{{ reponse.contenuReponse|striptags|slice(0, 15) }}</td>
                <td>
                    <button class="btn btn-outline-secondary"><a href="{{ path('app_reponse_show', {'id': reponse.id}) }}">Afficher</a></button>
                    <button class="btn btn-outline-secondary"><a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">Modifier</a></button>
                    {{ include('reponse/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div align="center" class="card-footer">
         <br>
        <button class="btn btn-outline-secondary"><a href="{{ path('app_reclamation_index') }}">Consulter Réclamations</a></button>
    </div>
</div>
{% endblock %}
