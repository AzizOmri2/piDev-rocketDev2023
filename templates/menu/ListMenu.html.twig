{% extends 'baseBack.html.twig' %}

{% block title %}EnergyBox | Restaurant{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-between">
            <div class="col">
                <h1>Liste des menus</h1>
                <a href="{{ path('app_tri_nomMA') }}" class="btn btn-outline-dark btn-sm"><i class="fas fa-sort-alpha-up"></i>Trier par nom</a>
                <a href="{{ path('app_tri_nomMD') }}" class="btn btn-outline-dark btn-sm"><i class="fas fa-sort-alpha-down"></i>Trier par nom</a>
            </div>
            <div class="col-auto">
                <a href="{{ path('app_addmenu') }}" class="btn btn-outline-dark"><i class="fas fa-plus"></i> Ajouter</a>
            </div>

        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover mt-3">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>IdUtilisateur</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for menu in tabmenu %}
                    <tr>
                        <td>{{ menu.categories }}</td>
                        <td>{{ menu.descriptionmenu }}</td>
                        <td>{{ menu.UserId }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_updatemenu', {'id': menu.id}) }}" class="btn btn-secondary"><i class="fas fa-edit"></i> Modifier</a>
                                <a href="{{ path('app_removemenu', {'id': menu.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucun menu trouv√©.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
