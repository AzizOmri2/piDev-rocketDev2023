{%  extends 'baseBack.html.twig' %}


{% block title %} Liste des Materiels {% endblock %}

{% block body %}
        <!-- PAGE CONTAINER-->

                                <!-- START WHITE BACKGROUND-->


                                    <!-- USER DATA-->
                                    <div class="user-data m-b-40">
                                        <h3 class="title-3 m-b-30">
                                            <i class="fa-solid fa-dumbbell"></i>Detail Materiel <Strong>{{materiel.id}}</Strong></h3>

                                        <div class="table-responsive table-data">
                                            <table class="table">
                                                <tbody>
                                                <tr>
                                                    <th>Id</th>
                                                    <td>{{ materiel.id }}</td>
                                                </tr>
                                                <tr>
                                                    <th>NomMateriel</th>
                                                    <td>{{ materiel.nomMateriel }}</td>
                                                </tr>
                                                <tr>
                                                    <th>ReferenceMateriel</th>
                                                    <td>{{ materiel.referenceMateriel }}</td>
                                                </tr>
                                                <tr>
                                                    <th>DateMaintenanceMateriel</th>
                                                    <td>{{ materiel.dateMaintenanceMateriel ? materiel.dateMaintenanceMateriel|date('Y-m-d') : '' }}</td>
                                                </tr>
                                                <tr>
                                                    <th>QuantiteMateriel</th>
                                                    <td>{{ materiel.quantiteMateriel ? materiel.quantiteMateriel : 0 }}</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>


                                        <div align="center" class="card-footer">

                                            <a class="btn btn-danger " href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">Edit</a>

                                            <a class="btn btn-secondary" href="{{ path('app_materiel_index') }}">Back to list</a>

                                        </div>
                                            {{ include('materiel/_delete_form.html.twig') }}


                                    </div>
                                    <!-- END USER DATA-->






            <!-- END MAIN CONTENT-->
{% endblock %}


