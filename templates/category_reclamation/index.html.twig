{% extends 'baseBack.html.twig' %}

{% block title %}EnergyBox | Catégories {% endblock %}

{% block body %}
<div class="map-data m-b-40">                   
    <h3 class="title-3 m-b-30">
        <i class="fas fa-newspaper"></i>Gestion Catégories</h3>

    <table class="table">
        <thead>
            <tr>
                <td><strong>Nom</strong></td>
                <td><strong>Description</strong></td>
                <td><strong>Priorité</strong></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
        {% for category_reclamation in category_reclamations %}
            <tr>
                <td>{{ category_reclamation.nomCategory }}</td>
                <td>{{ category_reclamation.descriptionCategory|striptags|slice(0, 38) }}</td>
                <td>{{ category_reclamation.prioriteCategory }}</td>
                <td>
                    <button class="btn btn-outline-secondary"><a href="{{ path('app_category_reclamation_show', {'id': category_reclamation.id}) }}">Afficher</a></button>
                    <button class="btn btn-outline-secondary"><a href="{{ path('app_category_reclamation_edit', {'id': category_reclamation.id}) }}">Modifier</a></button>
                    {{ include('category_reclamation/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas des catégories.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div align="center" class="card-footer">
        <br>
        <button class="btn btn-outline-secondary"><a href="{{ path('app_category_reclamation_new') }}">Ajouter Catégorie</a></button>
    </div>
</div>
{% endblock %}
