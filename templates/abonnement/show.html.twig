 {% extends 'baseBack.html.twig' %} 
 {% block title %}EnergyBox | Abonnement {% endblock %} 


{% block body %}
   
    <!-- MAIN CONTENT-->
    <div class="page-wrapper">
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- START WHITE BACKGROUND-->
                                <div class="map-data m-b-40">

    <h1>Abonnement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonnement.id }}</td>
            </tr>
            <tr>
                <th>Type Abonnement</th>
                <td>{{ abonnement.pack.typePack  }}</td>
            </tr>
            
            <tr>
                <th>Durée Abonnement</th>
                <td>{{ abonnement.pack.dureePack }}</td>
            </tr>
            <tr>
                <th>Date Achat</th>
                <td>{{ abonnement.dateAchat ? abonnement.dateAchat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ abonnement.dateFin ? abonnement.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat Abonnement</th>
                <td>{{ abonnement.etatAbonnement }}</td>
            </tr>
        </tbody>
    </table>
                                      <br>
<button type="button" class="btn btn-danger">
    <a href="{{ path('app_abonnement_index') }}" style="color:white;">liste des abonnements</a> </button>
 <button type="button" class="btn btn-secondary">

    <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}" style="color:white;">modifier</a> </button>

    {{ include('abonnement/_delete_form.html.twig') }}
</div>
                                </div>
                                <!-- END WHITE BACKGROUND-->
                            </div>
                        </div>
                        
                        
                        <div class="row">
                            <div class="col-md-12">
